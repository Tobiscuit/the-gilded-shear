rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Bookings collection - authenticated users can read/write their own bookings
    match /bookings/{bookingId} {
      allow read, write: if request.auth != null && 
        (resource == null || request.auth.uid == resource.data.customerId);
      allow create: if request.auth != null;
    }
    
    // Admin users collection - only admin emails can access
    match /admin/{adminId} {
      allow read, write: if request.auth != null && 
        request.auth.token.email in ['tobiasramzy@gmail.com'];
    }
    
    // Public services collection - everyone can read
    match /services/{serviceId} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.token.email in ['tobiasramzy@gmail.com'];
    }
    
    // Admin notifications - only admins can read/write
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && 
        request.auth.token.email in ['tobiasramzy@gmail.com'];
    }
  }
}
