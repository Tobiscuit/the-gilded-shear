rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    // We hardcode the admin email here for server-side security.
    // This cannot be bypassed by client-side modifications.
    function isAdmin() {
      return request.auth != null && request.auth.token.email in ['tobiasramzy@gmail.com'];
    }

    // Bookings collection
    match /bookings/{bookingId} {
      // Admins can read/write all bookings.
      // Customers can only read/write their own bookings (checked by clientEmail or created by them).
      allow read, update, delete: if isAdmin() || (
        request.auth != null && (
          resource.data.clientEmail == request.auth.token.email
        )
      );
      allow create: if true; // Allow public to book
    }
    
    // Admin users collection - only admin emails can access
    match /admin/{adminId} {
      allow read, write: if isAdmin();
    }
    
    // Public services collection
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Admin notifications
    match /notifications/{notificationId} {
      allow read, write: if isAdmin();
    }
    
    // Barber Profile
    match /barberProfile/{profileId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
